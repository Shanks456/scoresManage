.container {
  background: linear-gradient(to bottom, #ffffff, #f0f9ff); 
  padding: 30rpx; 
  min-height: 100vh; 
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx; 
  font-weight: bold; 
  color: #007bff; 
  text-align: center; 
  margin-top: 20rpx; 
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2); 
}

.divider {
  width: 80%; 
  height: 2rpx; 
  background: #e0e0e0; 
  margin: 20rpx 0; 
}

.content {
  background: #ffffff;
  border-radius: 20rpx; 
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); 
  font-size: 32rpx;
  line-height: 1.8; 
  color: #333333; 
  text-align: justify; 
  width: 90%; 
}

.contact {
  margin-top: 40rpx;
  width: 90%; 
  background: #ffffff; 
  border-radius: 20rpx; 
  padding: 20rpx; 
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.contact-title {
  font-size: 36rpx; 
  font-weight: bold; 
  color: #007bff; 
  margin-bottom: 20rpx; 
  text-align: center; 
}

.contact-item {
  display: flex;
  flex-direction: row; 
  margin-bottom: 15rpx; 
}

.contact-label {
  font-size: 30rpx; 
  font-weight: bold; 
  color: #444444; 
  width: 120rpx; 
}

.contact-value {
  font-size: 30rpx; 
  color: #666666; 
  flex: 1; 
  word-wrap: break-word;
}