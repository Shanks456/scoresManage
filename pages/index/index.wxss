.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  margin: 0 0 60rpx;
  color: transparent;
  background: linear-gradient(45deg, #2196F3, #4CAF50);
  -webkit-background-clip: text;
  background-clip: text;
  letter-spacing: 4rpx;
  text-align: center;
  line-height: 1.4;
}

.form-group {
  width: 80%;
  margin-bottom: 40rpx;
  position: relative;
  display: flex;
  justify-content: center;
}

.input {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.9);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #2196F3;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.2);
}

.picker {
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  color: #666;
  position: relative;
  box-sizing: border-box;
}

.picker::after {
  content: "â–¼";
  position: absolute;
  right: 30rpx;
  color: #999;
  font-size: 24rpx;
  transform: translateY(-2rpx);
}

.login-button,
.register-button {
  width: 80%;
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.login-button {
  background: linear-gradient(45deg, #2196F3, #4CAF50);
  color: white;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.login-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.register-button {
  background: transparent;
  color: #2196F3;
  border: 2rpx solid #2196F3;
  margin-top: 30rpx;
}

.register-button:active {
  background: rgba(33, 150, 243, 0.1);
}

.input::-webkit-input-placeholder {
  color: #999;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

@media (max-width: 480rpx) {
  .container {
    padding: 30rpx;
  }
  
  .form-group,
  .login-button,
  .register-button {
    width: 90%;
  }

  .title {
    font-size: 40rpx;
    margin-bottom: 40rpx;
  }

  .input,
  .picker {
    height: 80rpx;
    font-size: 26rpx;
  }
}

@media (orientation: landscape) {
  .container {
    padding-top: 60rpx;
    padding-bottom: 60rpx;
  }
  
  .title {
    margin-bottom: 40rpx;
  }
  
  .form-group {
    margin-bottom: 30rpx;
  }
}