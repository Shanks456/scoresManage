.subject-scroll {
  white-space: nowrap;
  padding: 20rpx 0;
  background: #f5f5f5;
}

.subject-item {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
  background: #fff;
  transition: all 0.3s;
}

.subject-item.active {
  background: #1890ff;
  color: white;
  transform: scale(1.05);
}

.content-container {
  padding: 40rpx;
}

.score-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.subject-name {
  font-size: 36rpx;
  font-weight: bold;
}

.update-time {
  color: #666;
  font-size: 24rpx;
}

.score-content {
  display: grid;
  grid-template-columns: 100rpx 1fr;
  gap: 20rpx;
}

.label {
  color: #666;
}

.value {
  color: #1890ff;
  font-size: 44rpx;
}

.comment {
  color: #333;
  grid-column: span 2;
}

.loading-box {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  animation: rotating 1s linear infinite;
}

@keyframes rotating {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto 20rpx;
}

.return-bar {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.return-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.return-text {
  color: #2d8cf0;
  font-size: 30rpx;
}