.plan-container {
  padding: 32rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #f0f4fe 100%);
  min-height: 100vh;
}

.section-card {
  background: rgba(255,255,255,0.95);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(82,102,255,0.08);
  border: 1rpx solid rgba(238,242,255,0.8);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(240,243,255,0.8);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3436;
  letter-spacing: 1rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 60%;
  background: #5b8cff;
  border-radius: 4rpx;
}

button[type="primary"], 
button[size="mini"] {
  background: linear-gradient(45deg, #5b8cff, #769dff);
  color: white !important;
  border-radius: 999rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(91,140,255,0.2);
  transition: all 0.2s;
}

button[size="mini"]::after {
  border: none;
}

button[size="mini"]:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.edit-group {
  margin: 32rpx 0;
  background: rgba(245,248,255,0.6);
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s;
}

.edit-label {
  display: block;
  color: #5b6d8c;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

textarea, 
input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: white;
  border-radius: 12rpx;
  border: 1rpx solid rgba(235,240,255,0.8);
  font-size: 30rpx;
  color: #3d464d;
  transition: all 0.3s;
}

textarea:focus, 
input:focus {
  border-color: #a0bfff;
  box-shadow: 0 4rpx 16rpx rgba(91,140,255,0.1);
}

.task-item {
  margin: 32rpx 0;
  padding: 32rpx;
  background: white;
  border-radius: 16rpx;
  position: relative;
  border: 1rpx solid rgba(240,243,255,0.8);
}

.task-header {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.task-header input {
  flex: 1;
  min-width: 0;
}

.task-header input[type="date"] {
  max-width: 280rpx;
  background: #f8faff;
}

.task-actions button {
  background: rgba(255,107,107,0.12) !important;
  color: #ff6b6b !important;
  border-radius: 999rpx;
  margin-top: 16rpx;
}

.editor {
  min-height: 200rpx;
  padding: 24rpx;
  background: white;
  border-radius: 12rpx;
}

.save-footer {
  position: sticky;
  bottom: 0;
  padding: 32rpx;
  background: rgba(255,255,255,0.96);
  box-shadow: 0 -8rpx 40rpx rgba(82,102,255,0.06);
  backdrop-filter: blur(20rpx);
}

button[type="primary"] {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

textarea::placeholder, 
input::placeholder {
  color: #b1c0d3 !important;
  opacity: 0.8;
}

.text-preview {
  color: #5b6d8c;
  line-height: 1.6;
  white-space: pre-wrap;
  padding: 16rpx 0;
}