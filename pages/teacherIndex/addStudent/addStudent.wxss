/* pages/teacherIndex/addStudent/addStudent.wxss */
.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.header {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 15px;
}

.input-container {
  display: flex;
  align-items: center; 
}

.label {
  margin-right: 10px; 
  font-size: 16px;
}

.input-field {
  flex: 1; 
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.picker {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}

.submit-container {
  margin-top: 20px;
  text-align: center;
}

.submit-button {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.submit-button:hover {
  background-color: #005bb5;
}
