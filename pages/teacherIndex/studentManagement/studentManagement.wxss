.container {
  padding: 20px;
}

.title {
  font-size: 24px;
  margin-bottom: 10px;
}

.search-container {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.search-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.search-button {
  margin-left: 10px;
  height: 40px;
  background-color: #3CC51F;
  color: white;
  border: none;
  border-radius: 4px;
}

.add-button {
  margin-left: 10px;
  height: 40px;
  background-color: #1f87dd;
  color: white;
  border: none;
  border-radius: 4px;
}

.student-list {
  margin-top: 20px;
}

.student-item {
  margin: 10px auto;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  width: 300px;
  text-align: center;
}

.action-buttons {
  display: flex;
  justify-content: center;
  margin-top: 5px;
}

.action-buttons button {
  margin-right: 5px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 5px 10px;
  height: 30px;
}

.action-buttons button:hover {
  background-color: #28d112;
}